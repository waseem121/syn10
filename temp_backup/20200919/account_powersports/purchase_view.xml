<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="purchase_order_form_account_powersports_inherit" model="ir.ui.view">
            <field name="name">purchase.order.form.account.powersports.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="has_default_currency" invisible="1"/>
                    <field name="exchange_rate" attrs="{'invisible': [('has_default_currency', '=', True)]}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>