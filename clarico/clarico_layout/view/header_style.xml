<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_header_config" model="ir.ui.view">
		<field name="name">Header style settings</field>
		<field name="model">website.config.settings</field>
		<field name="inherit_id" ref="website.view_website_config_settings" />
		<field name="arch" type="xml">
			<xpath expr="//header" position="after">
					<group string="Header">
						<field name="clarico_header_style_one" string="Clarico header style1"/>
						<field name="clarico_header_style_two" string="Clarico header style2"/>
						<field name="clarico_header_style_three" string="Clarico header style3"/>
					</group>
			</xpath>
		</field>
	</record>
</odoo>