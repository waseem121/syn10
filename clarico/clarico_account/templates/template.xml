<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="clarico_account_ecommerce_portal_my_account" name="Link to e-Commerce frontend portal"
		inherit_id="clarico_layout.clarico_header_main">
		<xpath expr="//ul[@id='logout_ul']//li[@id='o_logout']"
			position="before">
			<li>
				<p class="ul_class_admin_name">
					<i class="fa fa-user fa_common_style_header" style="padding-right: 9px;"></i>
					<a href="/my/home">
						<span class="span_logout"
							t-esc="(len(user_id.name)&gt;25) and (user_id.name[:23]+'...') or user_id.name" />
					</a>
				</p>
			</li>
			<li>
				<p class="ul_class_admin_name">
					<i class="fa fa-shopping-cart fa_common_style_header"></i>
					<a href="/shop/cart" class="span_logout">My Cart</a>
				</p>
			</li>
			<li>
				<p class="ul_class_admin_name">
					<i class="fa fa-heart fa_common_style_header"></i>
					<a href="/wishlist" class="span_logout">My Wishlist</a>
				</p>
			</li>
			<li>
				<p class="ul_class_admin_name">
					<i class="fa fa-pie-chart fa_common_style_header"></i>
					<a href="/my/orders" class="span_logout">My Orders</a>
				</p>
			</li>
			<li>
				<p class="ul_class_admin_name">
					<i class="fa fa-usd fa_common_style_header" style="padding-right: 9px;"></i>
					<a href="/my/invoices" class="span_logout">My Invoices</a>
				</p>
			</li>
		</xpath>
	</template>

	<template id="website_portal.details">
		<t t-call="website.layout">
			<t t-set="additional_title">Contact Details</t>
			<div id="wrap">
				<div
					class="breadcrumb-main-div col-sm-12 div_class_contact_details_page_padding">
					<ol class="breadcrumb">
						<li>
							<a class="anch_class_op_myaccount" href="/my/home">My Account</a>
						</li>
						<li class="li_class_op_details">Details</li>
					</ol>
				</div>
				<div class="container div_class_contact_details_page_padding">
					<div class="row">

					</div>
					<h3 class="chs_heading">
						Contact Details
						<a href="/web/reset_password" class="reset-password-link">Reset Password</a>
					</h3>
					<form action="/my/account" method="post">
						<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
						<div class="row o_website_portal_details mt32">
							<div
								class="col-md-8 div_class_contact_details_page_padding div_class_contact_details_responsive">
								<div class="row">
									<div class="col-md-12 pl0" style="min-height: auto;">
										<div t-if="error_message" class="alert alert-danger">
											<t t-foreach="error_message" t-as="err">
												<t t-esc="err" />
												<br />
											</t>
										</div>
									</div>
									<div
										t-attf-class="form-group #{error.get('name') and 'has-error' or ''} col-lg-6 col-md-6 my_account_label_font_class pl0">
										<label class="control-label label_style_my_account_contact_details"
											for="contact_name">Your Name</label>
										<input type="text" name="name" class="form-control"
											t-att-value="name or partner.name" />
									</div>
									<div
										t-attf-class="form-group #{error.get('email') and 'has-error' or ''} col-lg-6 col-md-6 my_account_label_font_class">
										<label class="control-label label_style_my_account_contact_details"
											for="contact_name">Email</label>
										<input id="email_space_ckeck" type="email" name="email"
											class="form-control" t-att-value="email or partner.email"
											t-att-readonly="'readonly' if email or partner.email else ''" />
									</div>
									<div
										t-attf-class="form-group #{error.get('phone') and 'has-error' or ''} col-lg-6 col-md-6 my_account_label_font_class pl0">
										<label class="control-label label_style_my_account_contact_details"
											for="phone">Phone</label>
										<input type="tel" name="phone" class="form-control"
											t-att-value="phone or partner.phone" onkeypress="return isNumber(event)" />
									</div>

									<div class="clearfix" />
									<div
										t-attf-class="form-group #{error.get('street') and 'has-error' or ''} col-lg-6 col-md-6 my_account_label_font_class pl0">
										<label
											class="control-label label-optional label_style_my_account_contact_details"
											for="street">Company Name</label>
										<input type="text" name="company_name" class="form-control"
											t-att-value="company_name or partner.company_name" />
									</div>
									<div t-if="has_check_vat"
										t-attf-class="form-group #{error.get('vat') and 'has-error' or ''} col-lg-6 col-md-6 my_account_label_font_class">
										<label
											class="control-label label-optional label_style_my_account_contact_details"
											for="vat">VAT Number</label>
										<input type="text" name="vat" class="form-control"
											t-att-value="vat or partner.vat" />
									</div>

									<div class="clearfix" />
									<div
										t-attf-class="form-group #{error.get('street') and 'has-error' or ''} col-lg-6  col-md-6 my_account_label_font_class pl0">
										<label class="control-label label_style_my_account_contact_details"
											for="street">Street</label>
										<input type="text" name="street" class="form-control"
											t-att-value="street or partner.street" />
									</div>
									<div
										t-attf-class="form-group #{error.get('city') and 'has-error' or ''} col-lg-6 col-md-6 my_account_label_font_class">
										<label class="control-label label_style_my_account_contact_details"
											for="city">City</label>
										<input type="text" name="city" class="form-control"
											t-att-value="city or partner.city" />
									</div>
									<div
										t-attf-class="form-group #{error.get('zip') and 'has-error' or ''} col-lg-6 col-md-6 my_account_label_font_class pl0">
										<label class="control-label label_style_my_account_contact_details"
											for="zipcode">Zip / Postal Code</label>
										<input type="text" name="zipcode" class="form-control"
											t-att-value="zipcode or partner.zip" />
									</div>
									<div class="clearfix" />
									<div
										t-attf-class="form-group #{error.get('country_id') and 'has-error' or ''} col-lg-6 col-md-6 my_account_label_font_class pl0">
										<label class="control-label label_style_my_account_contact_details"
											for="country_id">Country</label>
										<select name="country_id" class="form-control" style="height:47px">
											<option value="">Country...</option>
											<t t-foreach="countries or []" t-as="country">
												<option t-att-value="country.id"
													t-att-selected="country.id == partner.country_id.id">
													<t t-esc="country.name" />
												</option>
											</t>
										</select>
									</div>
									<div
										t-attf-class="form-group #{error.get('state_id') and 'has-error' or ''} col-lg-6 col-md-6 my_account_label_font_class">
										<label
											class="control-label label-optional label_style_my_account_contact_details"
											for="state_id">State / Province</label>
										<select name="state_id" class="form-control" style="height:47px">
											<option value="">select...</option>
											<t t-foreach="states or []" t-as="state">
												<option t-att-value="state.id" style="display:none;"
													t-att-data-country_id="state.country_id.id" t-att-selected="state.id == partner.state_id.id">
													<t t-esc="state.name" />
												</option>
											</t>
										</select>
									</div>
									<input type="hidden" name="redirect" t-att-value="redirect" />
								</div>
								<div class="clearfix">
									<button type="submit"
										class="btn btn-default btn-primary mt16 common-btn">
										Confirm
										<span class="fa fa-long-arrow-right" />
									</button>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
			<script>

				$('input#email_space_ckeck').keypress(function(e){
				if(e.which === 32)
				return false;
				})
				$(".btn_class_my_account_submit").click(function(){
				$("#email_space_ckeck").val($("#email_space_ckeck").val().replace(/\s+/g,
				''));
				});
			</script>
		</t>
	</template>

	<!-- My Account -->
	<template id="website_portal.account" name="Account">
		<t t-call="website.layout">
			<div id="wrap">
				<div
					class="container mb64 div_class_map_account_padding div_class_mb_responsive">
					<div
						class="col-md-9 o_my_documents div_class_map_account_padding div_class_mya_left">
						<div class="oe_structure" />
					</div>
					<div t-if="sales_rep" class="col-md-3 div_class_mya_right">
						<t t-call="website_portal.contact" />
						<div class="oe_structure" />
					</div>
					<div id="o_my_sidebar" class="col-md-3 o_my_sidebar div_class_mya_right">
						<div class="o_my_details">
							<h3 class="page-header h3_class_account_heading">
								Your Details
								<a href="/my/account" class="btn btn-default btn-xs">
									Change
									<span class="fa fa-long-arrow-right i_class_arrow_map"></span>
								</a>
							</h3>
							<div class="div_class_my_account_address" t-field="user.partner_id"
								t-field-options='{"widget": "contact", "fields": ["email", "phone", "address", "name"]}' />
						</div>
					</div>
					<div class="col-md-12 oe_structure" />
				</div>
			</div>
			<script type="text/javascript"
				src="/clarico_account/static/src/js/portal_sale_address.js"></script>
		</t>
	</template>

	<!-- Contact Address -->
	<template id="website_portal.contact" name="Contact">
		<h3 class="page-header h3_class_account_heading">Contact</h3>
		<h5 t-esc="sales_rep.name" />
		<p>
			<a t-att-href="'mailto:'+sales_rep.email" t-esc="sales_rep.email" />
		</p>
		<p t-esc="sales_rep.phone" />
		<p t-esc="sales_rep.city" />
	</template>



	<!-- Remove My Account Menu -->
	<template id="website_portal.my_account_link" name="Link to frontend portal"
		inherit_id="website.layout">
		<xpath expr="//li[@id='o_logout']" position="before">

		</xpath>
	</template>

	<!-- Manage your payment methods Link -->
	<template id="website_payment.pay_meth_link" inherit_id="website_portal.account">
		<xpath expr="//div[@class='o_my_details']" position="inside">
			<p class="para_class_manage_your_order_link">
				<a class="anch_class_manage_payment_method_link" href="/my/payment_method">
					Manage your payment methods
					<span class="fa fa-long-arrow-right i_class_arrow_payment_method"></span>
				</a>
			</p>
		</xpath>
	</template>

	<!--website portal template override -->
	<template id="website_portal_sale.account" name="Account"
		inherit_id="website_portal.account">
		<xpath expr="//div[contains(@class,'o_my_documents')]" position="inside">
			<!-- <t t-call="website_portal_sale.quotations" /> -->
			<t t-call="website_portal_sale.sale_orders" />
			<t t-call="website_portal_sale.invoices" />
		</xpath>
	</template>

	<template id="website_portal_sale.portal_my_quotations" name="Quotations">
		<t t-call="website_portal.portal_layout">
			<h3 class="page-header h3_class_account_heading">Your Quotes</h3>
			<t t-if="not quotations">
				<p class="para_class_quotation_warning">There are currently no quotes for your account.</p>
			</t>
			<t t-if="quotations">
				<div class="table-responsive">
					<table class="table o_my_status_table table_portal_sale">
						<thead>
							<tr class="active">
								<th>Quotation #</th>
								<th>Valid Until</th>
								<th>Status</th>
								<th>Total</th>
							</tr>
						</thead>
						<t t-foreach="quotations" t-as="quotation">
							<tr
								t-att-class="'hidden to_hide' if quotation.state!='sent' and quotation_index &gt; 4 else ''">
								<td>
									<a class="anch_class_ma_quotation_id" t-att-href="'/my/orders/'+str(quotation.id)">
										<t t-esc="quotation.name" />
									</a>
								</td>
								<td>
									<span class="span_class_map_date" t-field="quotation.validity_date" />
								</td>
								<td>
									<t t-if="quotation.state == 'cancel'">
										<span class="label label-default btn_class_status_button_font">
											<i class="fa fa-fw fa-remove" />
											Cancelled
										</span>
									</t>
									<t
										t-if="quotation.validity_date and quotation.validity_date &lt; date">
										<span class="label label-default btn_class_status_button_font">
											<i class="fa fa-fw fa-clock-o" />
											Expired
										</span>
									</t>
								</td>
								<td>
									<span class="span_class_map_amount" t-esc="quotation.amount_total"
										t-esc-options='{"widget": "monetary", "display_currency": "quotation.pricelist_id.currency_id"}' />
								</td>
							</tr>
						</t>
						<tr t-att-class="'hidden' if len(quotations) &lt; 6 else ''">
							<td colspan="4">
								<a class="o_my_show_more btn btn-sm btn-primary">
									<span>
										Show more
										<i class="fa fa-plus i_class_show_more_btn_icon"
											aria-hidden="true"></i>
									</span>
									<span class="hidden">
										Show less
										<i class="fa fa-minus i_class_show_more_btn_icon"
											aria-hidden="true"></i>
									</span>
								</a>
							</td>
						</tr>
					</table>
				</div>
			</t>
		</t>
	</template>

	<template id="website_portal_sale.portal_my_orders" name="Sales Orders">
		<t t-call="website_portal.portal_layout">
			<h3 class="page-header h3_class_account_heading">Your Orders</h3>
			<t t-if="not orders">
				<p class="para_class_quotation_warning">There are currently no orders for your account.</p>
			</t>
			<t t-if="orders">
				<div class="table-responsive">
					<table class="table o_my_status_table table_portal_sale">
						<thead>
							<tr class="active">
								<th>Sale Order #</th>
								<th>Order Date</th>
								<th>Status</th>
								<th>Total</th>
							</tr>
						</thead>
						<t t-foreach="orders" t-as="order">
							<tr
								t-att-class="'hidden to_hide' if order.state not in ['manual', 'progress'] and order_index &gt; 4 else ''">
								<td>
									<a class="anch_class_ma_quotation_id" t-att-href="'/my/orders/'+str(order.id)">
										<t t-esc="order.name" />
									</a>
								</td>
								<td>
									<span class="span_class_map_date" t-field="order.create_date"
										t-field-options='{"widget": "date"}' />
								</td>
								<td>
									<t t-if="order.state == 'progress'">
										<span class="label label-info btn_class_status_button_font">
											<i class="fa fa-fw fa-clock-o" />
											Invoiced
										</span>
									</t>
									<t t-if="order.state in ['shipping_except','invoice_except']">
										<span class="label label-danger btn_class_status_button_font">
											<i class="fa fa-fw fa-warning" />
											Problem
										</span>
									</t>
									<t t-if="order.state == 'sale'">
										<span class="label label-default btn_class_status_button_font">
											<i class="fa  fa-fw fa-clock-o" style="margin-right: 2px;" />
											Pending
										</span>
									</t>
									<t t-if="order.state == 'done'">
										<span class="label label-default btn_class_status_button_font">
											<i class="fa fa-fw fa-check" />
											Done
										</span>
									</t>
								</td>
								<td>
									<span class="span_class_map_amount" t-esc="order.amount_total"
										t-esc-options='{"widget": "monetary", "display_currency": "order.pricelist_id.currency_id"}' />
								</td>
							</tr>
						</t>
						<tr t-att-class="'hidden' if len(orders) &lt; 6 else ''">
							<td colspan="4">
								<a class="o_my_show_more btn btn-sm btn-primary">
									<span>
										Show more
										<i class="fa fa-plus i_class_show_more_btn_icon"
											aria-hidden="true"></i>
									</span>
									<span class="hidden">
										Show less
										<i class="fa fa-minus i_class_show_more_btn_icon"
											aria-hidden="true"></i>
									</span>
								</a>
							</td>
						</tr>
					</table>
				</div>
			</t>
		</t>
	</template>

	<template id="website_portal_sale.portal_my_invoices" name="Invoices and Payments">
		<t t-call="website_portal.portal_layout">

			<h3 class="page-header h3_class_account_heading">Your Invoices and Payments</h3>
			<t t-if="not invoices">
				<p class="para_class_quotation_warning">There are currently no invoices for your account.</p>
			</t>
			<t t-if="invoices">
				<div class="table-responsive">
					<table class="table o_my_status_table table_portal_sale">
						<thead>
							<tr class="active">
								<th>Invoice #</th>
								<th>Invoice Date</th>
								<th>Due Date</th>
								<th class="th_class_status_column_width">Status</th>
								<th></th>
								<th>Total</th>
							</tr>
						</thead>
						<t t-foreach="invoices" t-as="invoice">
							<tr
								t-att-class="'hidden to_hide' if invoice.state!='open' and invoice_index &gt; 4 else ''">
								<td>
									<a target="_blank" class="anch_class_ma_quotation_id"
										t-att-href="'/report/pdf/account.report_invoice/'+str(invoice.id)">
										<t t-esc="invoice.number" />
									</a>
								</td>
								<td>
									<span class="span_class_map_date" t-field="invoice.date_invoice" />
								</td>
								<td>
									<span class="span_class_map_date" t-field="invoice.date_due" />
								</td>
								<td>
									<t t-if="invoice.state == 'open'">
										<span class="label label-info btn_class_status_button_font">
											<i class="fa fa-fw fa-clock-o" />
											Waiting for Payment
										</span>
									</t>
									<t t-if="invoice.state == 'paid'">
										<span class="label label-default btn_class_status_button_font">
											<i class="fa fa-fw fa-check" />
											Paid
										</span>
									</t>
									<t t-if="invoice.state == 'cancel'">
										<span class="label label-default btn_class_status_button_font">
											<i class="fa fa-fw fa-remove" />
											Cancelled
										</span>
									</t>
								</td>
								<td>
									<a t-if="invoice.state == 'open'"
										t-attf-href="/website_payment/pay?reference=#{invoice.number}&amp;amount=#{invoice.amount_total}&amp;currency_id=#{invoice.currency_id.id}&amp;country_id=#{invoice.partner_id.country_id.id}"
										alt="Pay Now" class="btn btn-xs btn-primary btn_class_ma_paynow">
										<i class="fa fa-arrow-circle-right icon_class_invoice_status" />
										Pay Now
									</a>
								</td>
								<td>
									<span class="span_class_map_amount" t-esc="invoice.amount_total"
										t-esc-options='{"widget": "monetary", "display_currency": "invoice.currency_id"}' />
								</td>
							</tr>
						</t>
						<tr t-att-class="'hidden' if len(invoices) &lt; 6 else ''">
							<td colspan="5">
								<a class="o_my_show_more btn btn-sm btn-primary">
									<span>
										Show more
										<i class="fa fa-plus i_class_show_more_btn_icon"
											aria-hidden="true"></i>
									</span>
									<span class="hidden">
										Show less
										<i class="fa fa-minus i_class_show_more_btn_icon"
											aria-hidden="true"></i>
									</span>
								</a>
							</td>
						</tr>
					</table>
				</div>
			</t>
		</t>
	</template>

	<template id="website_portal_sale.orders_followup" name="Sales Order">
		<t t-call="website.layout">
			<div id="wrap">
				<div class="col-sm-12 breadcrumb-main-div div_class_myorders_page_padding">
					<ol class="breadcrumb">
						<li>
							<a class="anch_class_op_myaccount" href="/my/home">My Account</a>
						</li>
						<li class="li_class_op_details">
							<t t-if="order.state == 'sent'">
								Quotation
							</t>
							<t t-if="order.state != 'sent'">
								Order
							</t>
							<t t-esc="order.name" />

						</li>
					</ol>
				</div>
				<div class="container div_class_myorders_page_padding">
					<div class="oe_structure">
						<div class="row">

						</div>
					</div>
					<div id="optional_placeholder"></div>
					<div class="div_whole_class_panel">

						<div class="panel">
							<div class="panel-heading" t-if="order.name">
								<div class="row">
									<div class="col-md-12 div_class_myorders_page_padding">
										<h4 class="h4_class_qp_quotation_heading">
											<t t-if="order.state == 'sent'">
												Quotation
											</t>
											<t t-if="order.state != 'sent'">
												Order
