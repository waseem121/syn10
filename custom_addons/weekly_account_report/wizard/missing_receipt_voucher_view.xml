<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="missing_receipt_voucher_form_view" model="ir.ui.view">
            <field name="name">missing.receipt.voucher.form.view</field>
            <field name="model">missing.receipt.voucher</field>
            <field name="arch" type="xml">
                <form>
                    <group col="4">
                        <field name="start" required="1"/>
                        <field name="end" required="1"/>
                    </group>
                    <footer>
                        <button type="object" string="Print" class="oe_highlight" name="generate_missing_voucher_report"/>
                        <button string="Cancel" class="oe_highlight" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_missing_receipt_voucher" model="ir.actions.act_window">
            <field name="name">Missing Receipt Voucher</field>
            <field name="res_model">missing.receipt.voucher</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="missing_receipt_voucher_form_view"/>
            <field name="target">new</field>
        </record>

        <menuitem parent="account_reports.account_reports_legal_statements_menu" action="action_missing_receipt_voucher"
            id="menu_missing_receipt_voucher" sequence="19"/>

    </data>
</odoo>
