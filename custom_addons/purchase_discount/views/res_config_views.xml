<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_purchase_discount_configuration" model="ir.ui.view">
            <field name="name">purchase.discount.res.config.view</field>
            <field name="model">purchase.config.settings</field>
            <field name="inherit_id"
                   ref="purchase.view_purchase_configuration"/>
            <field name="arch" type="xml">
                <xpath expr="//form/div" position="before">
                    <group string="Discount">
                        <group>
                            <field name="group_purchase_discount"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>

</odoo>
